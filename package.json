{
  "name": "archer-core",
  "version": "0.1.0",
  "description": "Core smart contracts for the Archer network",
  "repository": "https://github.com/archerdao/archer-core",
  "author": "Chris Piatt (@chpiatt)",
  "license": "Unlicense",
  "scripts": {
    "hardhat": "npx hardhat node --no-deploy --show-accounts",
    "accounts": "npx hardhat accounts",
    "compile": "npx hardhat compile",
    "script": "sh -c 'npx ./scripts/${0}.js'",
    "script:latest": "sh -c 'npx hardhat run ./scripts/${0}.js'",
    "docs": "npx ./docify.js",
    "test": "export REPORT_GAS=false && npx hardhat test",
    "test:gas": "export REPORT_GAS=true && npx hardhat test",
    "test:current": "export REPORT_GAS=false && npx hardhat test --no-compile",
    "test:current:gas": "export REPORT_GAS=true && npx hardhat test --no-compile",
    "test:spec": "sh -c 'export REPORT_GAS=false && npx hardhat test ./test/spec/${0}.spec.js'",
    "test:spec:gas": "sh -c 'export REPORT_GAS=true && npx hardhat test ./test/spec/${0}.spec.js'",
    "test:spec:current": "sh -c 'export REPORT_GAS=false && npx hardhat test ./test/spec/${0}.spec.js --no-compile'",
    "test:spec:current:gas": "sh -c 'export REPORT_GAS=true && npx hardhat test ./test/spec/${0}.spec.js --no-compile'",
    "deploy": "npx hardhat deploy",
    "deploy:reset": "npx hardhat deploy --reset",
    "deploy:tag": "sh -c 'npx hardhat deploy --tags ${0}'",
    "deploy:hardhat": "npx hardhat deploy --network hardhat",
    "deploy:hardhat:tag": "sh -c 'npx hardhat deploy --network hardhat --tags ${0}'",
    "deploy:local": "npx hardhat deploy --network localhost",
    "deploy:local:reset": "npx hardhat deploy --network localhost --reset",
    "deploy:local:tag": "sh -c 'npx hardhat deploy --network localhost --tags ${0}'",
    "deploy:local:tag:reset": "sh -c 'npx hardhat deploy --network localhost --tags ${0} --reset'",
    "deploy:rinkeby": "npx hardhat deploy --network rinkeby",
    "deploy:rinkeby:reset": "npx hardhat deploy --network rinkeby --reset",
    "deploy:rinkeby:tag": "sh -c 'npx hardhat deploy --network rinkeby --tags ${0}'",
    "deploy:rinkeby:tag:reset": "sh -c 'npx hardhat deploy --network rinkeby --tags ${0} --reset'",
    "deploy:prod": "npx hardhat deploy --network mainnet",
    "deploy:prod:reset": "npx hardhat deploy --network mainnet --reset",
    "deploy:prod:tag": "sh -c 'npx hardhat deploy --network mainnet --tags ${0}'",
    "deploy:prod:tag:reset": "sh -c 'npx hardhat deploy --network mainnet --tags ${0} --reset'",
    "logs": "npx hardhat remove-logs",
    "clean": "npx hardhat clean",
    "verify": "npx hardhat etherscan-verify --api-key $ETHERSCAN_API_KEY",
    "flatten": "mkdir -p flattened && npx hardhat flatten > ./flattened/Contract.sol",
    "tenderly:export": "sh -c 'tenderly export ${0}'",
    "tenderly:push": "sh -c 'npx hardhat tenderly:push ${0}=${1}'",
    "tenderly:verify": "sh -c 'npx hardhat tenderly:verify ${0}=${1}'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.4",
    "hardhat-abi-exporter": "^2.0.5",
    "hardhat-deploy": "^0.7.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.0",
    "hardhat-log-remover": "^2.0.0",
    "@tenderly/hardhat-tenderly": "^1.0.3",
    "solidity-docgen": "^0.5.7",
    "mocha": "^8.2.0"
  }
}
